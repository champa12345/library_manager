<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("appname"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if @current_user.admin %>
            <li><%= link_to "Manage Categories", categories_path %></li>
            <li><%= link_to "Manage Books", books_path %></li>
            <li><%= link_to t("users"), users_path %></li>
            <li><%= render "search/form" %><li>
          <% else %>
            <li><%= link_to t("books"), books_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= @current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
